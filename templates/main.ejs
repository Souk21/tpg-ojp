<% const is_list = location === "list"; %>
<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    <%= is_list ? "Liste des arrets" : stop.name %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    * {
      box-sizing: border-box;
    }

    html {
      height: 100%;
    }

    body {
      font-family: sans-serif;
      margin: 0;
      overflow: hidden;
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .scrollable {
      overflow-y: auto;
      scroll-behavior: smooth;
    }
  </style>
</head>

<body>
  <%- include("header", {favorites, stop, title: is_list ? "Recherche" : short_name, link: `${is_list ? "list" : "/s/"+location}`}) %>
  <div class="scrollable">
    <% if (is_list) { %>
    <%- include("list", {stops, favorites, location}) %>
    <% } else { %>
    <%- include("stop", {stop, departures, favorites, last_date, location}) %>
    <% } %>
  </div>
</body>

</html>